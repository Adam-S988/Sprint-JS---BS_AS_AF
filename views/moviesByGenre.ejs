<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Movies by Genre: <%= genre || 'Select a Genre' %></title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <%- include('header') %>
  <h1>Select a Genre</h1>
  <form action="/genre" method="get">
    <label for="genre">Choose a genre:</label>
    <select name="genre" id="genre" required>
      <option value="Action">Action</option>
      <option value="Adventure">Adventure</option>
      <option value="Animation">Animation</option>
      <option value="Crime">Crime</option>
      <option value="Drama">Drama</option>
      <option value="Fantasy">Fantasy</option>
      <option value="Horror">Horror</option>
      <option value="Romance">Romance</option>
      <option value="Sci-Fi">Sci-Fi</option>
      <option value="Thriller">Thriller</option>
      <option value="War">War</option>
    </select>
    <input type="hidden" name="limit" value="10">
    <button type="submit">Show Movies</button>
  </form>
  
  <% if (typeof movies !== 'undefined' && movies.length > 0) { %>
    <h2>Movies in Genre: <%= genre %></h2>
    <ul class="movie-list">
      <% movies.forEach(movie => { %>
        <li class="movie-item">
          <a href="/movie/<%= movie.id %>">
            <img src="<%= movie.thumbnail %>" alt="<%= movie.title %> Poster" class="movie-thumbnail" />
            <span class="movie-title"><%= movie.title %> (<%= movie.releaseYear %>)</span>
          </a>
        </li>
      <% }) %>
    </ul>
  <% } else if (typeof movies !== 'undefined') { %>
    <p>No movies found for the selected genre.</p>
  <% } %>
</body>
</html>


